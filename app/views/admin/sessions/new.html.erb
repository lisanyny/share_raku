<div class="container">
  <span style="background:#DDDDDD">管理者ログイン</span></br>
  <div class="row">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div style="margin:50px;">
      <table>
        <tr>
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </table>
    </div>

    <div style="text-align:center;">
      <%= f.submit "ログイン", class: 'btn btn-info' %>
    </div>
      <% end %>
  </div>
</div>

<%= render "admin/shared/links" %>
