<div class="container">
  <span style="background:#DDDDDD"><%= @customer.first_name+@customer.last_name %>さんの会員詳細</span></br>
  <div class="row">
    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>名前</th>
        <td><%= @customer.first_name+@customer.last_name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_deleted == true %>
            <strong>退会</strong>
          <% else %>
            <strong>有効</strong>
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-primary' %>
    <%= link_to "戻る", admin_customers_path, class: 'btn btn-success' %>
  </div>
</div>