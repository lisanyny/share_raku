<div class="container">
  <span class="sub-title"><%= @event.title %>の予定情報編集</span></br>
  <%= form_with model: @event, url: admin_event_path(@event.id) do |f| %>
  <div class="row">
    <table>
      <tr>
        <th>予定名</th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th>開催日時</th>
        <td><%= f.datetime_select :start_time %></td>
      </tr>
      <tr>
        <th>終了日時</th>
        <td><%= f.datetime_select :end_time %></td>
      </tr>
      <tr>
        <th>行き先</th>
        <td><%= f.select :place_id, options_from_collection_for_select(Place.all, :id, :name) %></td>
        <td></td>
      </tr>
      <tr>
        <th>集合場所</th>
        <td><%= f.text_field :meet_place %></td>
        <td></td>
      </tr>
      <tr>
        <th>主催者</th>
        <td><%= @event.customer.name %></td>
        <td></td>
      </tr>
    </table>
  </div>
  <%= f.submit "変更を保存", class: 'btn btn-success' %>
  <% end %>
  <%= link_to "削除", admin_event_confirm_path, class: 'btn btn-danger' %>
</div>