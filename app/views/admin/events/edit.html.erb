<div class="container">
  <span class="sub-title"><%= @event.title %>の予定情報編集</span></br>
  <%= form_with model: @event, url: admin_event_path(@event.id) do |f| %>
  <div class="row">
    <table>
      <tr>
        <th>予定名</th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th>開催日時</th>
        <td><%= f.datetime_select :start_time, {}, {class: 'select-field'}  %></td>
      </tr>
      <tr>
        <th>終了日時</th>
        <td><%= f.datetime_select :end_time, {}, {class: 'select-field'}  %></td>
      </tr>
      <tr>
        <th>行き先</th>
        <td><%= f.select :place_id, options_from_collection_for_select(Place.all, :id, :name), {}, {class: 'select-field'}  %></td>
        <td></td>
      </tr>
      <tr>
        <th>集合場所</th>
        <td><%= f.text_field :meet_place %></td>
        <td></td>
      </tr>
      <tr>
        <th>主催者</th>
        <td><%= @event.customer.name %></td>
        <td></td>
      </tr>
    </table>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>参加者名</th>
          <th>参加状況</th>
        </tr>
      </thead>
      <tbody>
        <% @guests.each do |guest| %>
        <tr>
          <td><%= guest.customer.first_name+guest.customer.last_name %></td>
          <td>
            <div style="display:inline-block">
              <div class="form-check form-check-inline">
               <%= f.radio_button :status, :participation %>
               <%= f.label :status, "　参加" %>
              </div>
              <div class="form-check form-check-inline">
               <%= f.radio_button :status, :no_join %>
               <%= f.label :status, "　不参加" %>
              </div>
              <div class="form-check form-check-inline">
               <%= f.radio_button :status, :waiting %>
               <%= f.label :status, "　選択中" %>
              </div>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= f.submit "変更を保存", class: 'btn btn-success' %>
  <%= link_to "削除", admin_event_confirm_path, class: 'btn btn-danger' %>
  <% end %>
</div>