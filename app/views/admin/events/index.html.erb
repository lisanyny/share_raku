<div class="container">
  <span style="background:#DDDDDD">イベント一覧</span></br>
  <div class="row">
    <table class="table table-hover table-inverse" style="margin:20px;">
      <thead>
        <tr>
          <td>開催日</td>
          <td>イベント名</td>
          <td>主催者</td>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
        <tr>
          <td><%= event.date.strftime("%Y/%m/%d (%a)" %></td>
          <td><%= event.title %></td>
          <td><%= event.customer.id %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @events %>
  </div>
</div>