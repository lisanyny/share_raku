<div class="container">
  <span style="background:#DDDDDD"><%= @customer_name %>さんのイベント一覧</span>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>開催日</th>
          <th>時間</th>
          <th>イベント名</th>
          <th>主催者</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
        <tr>
          <td><%= event.date %></td>
          <td><%= event.start_time %>〜<%= event.end_time %></td>
          <td><%= event.title %></td>
          <td><%= event.customer.first_name+event.customer.last_name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>