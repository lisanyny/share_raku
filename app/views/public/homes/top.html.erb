<div style="text-align:center; margin-top:20px;">
  <h5>ようこそ <%= current_customer.first_name %>さん！</h5>
</div>

<div class="today-area">
  <div class="today-event sub-title">　　 本日のイベント　</div>
  <ul>
    <% @events.each do |event| %>
      <% if event.start_time.to_date == Date.today %>
        <li class='today-title'><%= link_to event.title, event_path(event.id), class: 'event-link' %></li>
      <% end %>
    <% end %>
  </ul>
</div>


<div style="margin:30px">
<div style="font-family:メイリオ, Meiryo;">
  <%= link_to new_event_path, class: 'new-event-link' do %>
    <i class="fas fa-plus-circle"></i>新規イベントの作成
  <% end %>
<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>
</div>

<!--カレンダー上の表示-->
  <div class="container">
    <div class="row">
      <div class="col-12" style="height:150px;">
        <% events.each do |event| %>
          <li class="list-mark">
          <%= link_to event.title, event_path(event.id), class: 'event-link' %><br>
          <div class="time-area">
            <%= event.start_time.strftime("%H:%M") %><span>〜</span><%= event.end_time.strftime("%H:%M") %>
          </div>
          </li>
        <% end %>
      </div>
      <% end %>

    </div>
  </div>
</div>