<div class="container">
  <div class="row">
    <%= month_calendar events: @events do |date, events| %>
      <%= date.day %>

      <% events.each do |event| %>
      <div>
        <%= event.title %>
        <%= event.start_time %>~<%= event.end_time %>
      </div>
      <% end %>
    <% end %>
  </div>
</div>