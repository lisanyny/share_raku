<div class=container>
  <span class="sub-title">新規会員登録</span>
  <div class="row">

    <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <table style="margin:20px;">
      <tr>
        <th style="width:250px;">名前（姓）</th>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th>名前（名）</th>
        <td><%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th>パスワード（６文字以上）</th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th>パスワード（確認用）</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>

    <div style="text-align:center; margin:20px;">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
   <% end %>
 </div>

<span class="sub-title">既に登録済みの方</span></br>
<div style="margin-top:20px;">
  <%= link_to "こちら", customer_session_path %>からログインしてください。
</div>

</div>