<div class="container">
  <span class="sub-title"><%= @customer.first_name+@customer.last_name %>さんの会員情報編集</span>
  <%= form_with model: @customer, url: update_information_path do |f| %>
  <div class="row">
    <table>
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :first_name %></td>
        <td><%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email %></td>
        <td></td>
      </tr>
    </table>
  </div>
  <%= f.submit "変更を保存", class: 'btn btn-success' %>
  <% end %>
  <%= link_to "退会する", customer_confirm_path, class: 'btn btn-danger' %>
</div>