<div class=" container">
  <span class="sub-title"><%= @customer.first_name+@customer.last_name %>さんのマイページ</span>
  <div style="text-align:right;"><%= link_to "登録情報の編集", edit_information_path(current_customer), class:'btn btn-info' %></div>
  <div class="row">
    <table>
      <tr style="height:80px;">
        <th style="width:200px;">氏名</th>
        <td><%= @customer.first_name+"　"+@customer.last_name%></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
 </div>

    <span class="sub-title">主催のイベント一覧</span>
    <div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>開催日</th>
          <th>時間</th>
          <th>イベント名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
        <tr>
          <td><%= event.start_time.strftime("%Y/%m/%d(%a)") %></td>
          <td><%= event.start_time.strftime("%H:%M") %>〜<%= event.end_time.strftime("%H:%M") %></td>
          <td><%= link_to event.title, event_path(event.id) %></td>
          <td><%= link_to "編集する", edit_event_path(event.id), class: 'btn btn-info' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%#= paginate @events %>
    </div>

</div>